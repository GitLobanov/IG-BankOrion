<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:mem:bankorion</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>


        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="com.backend.model.User" />
        <mapping class="com.backend.model.CardTransaction" />
        <mapping class="com.backend.model.Account" />
        <mapping class="com.backend.model.Card" />
    </session-factory>
</hibernate-configuration>